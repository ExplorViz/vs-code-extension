{
  "name": "explorviz-vscode-extension",
  "displayName": "explorviz-vscode-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:explorviz-vscode-extension.helloWorld",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "explorviz-vscode-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "explorviz-vscode-extension.webview",
        "title": "ExplorViz webview"
      },
      {
        "command": "explorviz-vscode-extension.testCommand",
        "title": "ExplorViz TestCommand Callback"
      },
      {
        "command": "explorviz-vscode-extension.VizDoubleClickOnMesh",
        "title": "ExplorViz VizDoubleClickOnMesh"
      },
      {
        "command": "explorviz-vscode-extension.VizSingleClickOnMesh",
        "title": "VizSingleClickOnMesh"
      },
      {
        "command": "explorviz-vscode-extension.IdeTestCallback",
        "title": "IdeTestCallback"
      },
      {
        "command": "explorviz-vscode-extension.OpenInExplorViz",
        "title": "OpenInExplorViz"
      },
      {
        "command": "explorviz-vscode-extension.openSplitWindow",
        "title": "openSplitWindow"
      },
      {
        "command": "explorviz-vscode-extension.selectJavaFileToOpen",
        "title": "selectJavaFileToOpen"
      },
      {
        "command": "explorviz-vscode-extension.connectToRoom",
        "title": "ExplorViz: Connect to room ..."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ExplorViz VS Code Extension",
      "properties": {
        "explorviz.backendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Specify URL for ExplorViz's VS Code backend."
        },
        "explorviz.frontendUrl": {
          "type": "string",
          "default": "http://localhost:4200",
          "description": "Specify URL for ExplorViz's frontend."
        },
        "explorviz.packageBaseDir": {
          "type": "string",
          "default": "/src/main/java",
          "description": "Specify if there is a src directory that wouldn't be included into the FQN"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^10.2.2",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "request-promise-native": "^1.0.9",
    "socket.io-client": "^4.6.1",
    "vsls": "^1.0.4753"
  }
}
